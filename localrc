# Programming Languages and Frameworks
# Java may be installed in different paths:
# /System/Library/Java/JavaVirtualMachines
# /Library/Java/JavaVirtualMachines
# Note these are not single quotes
export JAVA_HOME=`/usr/libexec/java_home`
#export ANDROID_HOME="/Developer/android-sdk-macosx"

# SCM
export SVN_EDITOR=vim
export GIT_HOME="/usr/local/git"

# Android
#export PATH=$PATH:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools

export PATH=$PATH:~/.dotfiles/cheat_commands/

# tmux-scripts
export PATH=$PATH:~/.dotfiles/tmux-scripts/

# node.js modules
export PATH=$PATH:/usr/local/lib/node_modules

# yarn global node_modules
#export PATH=$PATH:$(yarn global bin)

# rvm
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting ???
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# rails
export RAILS_ENV=development

# fzf
export FZF_DEFAULT_OPTS='--no-height --no-reverse'
export FZF_DEFAULT_COMMAND='ag -g ""'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
